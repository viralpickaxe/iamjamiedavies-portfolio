<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access 7 days"
  ExpiresByType image/jpeg "access 7 days"
  ExpiresByType image/gif "access 7 days"
  ExpiresByType image/png "access 7 days"
  ExpiresByType text/css "access 1 day"
  ExpiresByType text/html "access 1 day"
  ExpiresByType application/pdf "access 1 day"
  ExpiresByType text/x-javascript "access 1 day"
  ExpiresByType application/x-shockwave-flash "access 1 day"
  ExpiresByType image/x-icon "access 1 month"
  ExpiresDefault "access 1 day"
</IfModule>